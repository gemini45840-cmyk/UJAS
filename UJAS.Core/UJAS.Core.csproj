		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup>
		<PackageId>UJAS.Core</PackageId>
		<Version>1.0.0</Version>
		<Authors>Universal Job Application System Team</Authors>
