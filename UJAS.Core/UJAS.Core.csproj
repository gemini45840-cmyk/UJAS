		<Description>Core domain entities and business logic for Universal Job Application System</Description>
		<RepositoryUrl>https://github.com/gemini45840-cmyk/UJAS</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Identity.Stores" Version="8.0.0" />
	</ItemGroup>

</Project>