{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning",
            "Hangfire": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=UJAS;Trusted_Connection=True;MultipleActiveResultSets=true",
        "Redis": "localhost:6379"
    },
    "Jwt": {
        "Key": "your-super-secret-key-minimum-32-characters-long",
        "Issuer": "UJAS-API",
        "Audience": "UJAS-Client",
        "ExpireDays": 7,
        "RefreshTokenExpireDays": 30
    },
    "Email": {
        "Provider": "SendGrid",
        "FromEmail": "noreply@ujas.com",
        "FromName": "Universal Job Application System",
        "SendGridApiKey": "your-sendgrid-api-key"
    },
    "FileStorage": {
        "Provider": "Azure",
        "LocalPath": "wwwroot/uploads",
        "AzureConnectionString": "your-azure-storage-connection-string",
        "ContainerName": "ujas-documents"
    },
    "AppSettings": {
        "BaseUrl": "https://api.yourdomain.com",
        "ClientUrl": "https://app.yourdomain.com",
        "WidgetUrl": "https://widget.yourdomain.com",
        "SupportEmail": "support@ujas.com",
        "MaxFileSizeMB": 10,
        "AllowedFileTypes": [ ".pdf", ".doc", ".docx", ".txt", ".jpg", ".jpeg", ".png" ]
    },
    "AllowedOrigins": {
        "Web": "https://app.yourdomain.com",
        "Widgets": "https://*.yourdomain.com,http://localhost:3000"
    },
    "RateLimiting": {
        "EnableRateLimiting": true,
        "HttpStatusCode": 429,
        "IpWhitelist": [],
        "EndpointWhitelist": [],
        "ClientWhitelist": [],
        "GeneralRules": [
            {
                "Endpoint": "*",
                "Period": "1s",
                "Limit": 10
            },
            {
                "Endpoint": "*",
                "Period": "1m",
                "Limit": 100
            },
            {
                "Endpoint": "*",
                "Period": "1h",
                "Limit": 1000
            }
        ]
    },
    "DataRetention": {
        "ApplicationRetentionDays": 365,
        "ArchivedApplicationRetentionDays": 730,
        "AuditLogRetentionDays": 90,
        "EnableAutoCleanup": true,
        "CleanupSchedule": "0 2 * * *"
    },
    "BackgroundJobs": {
        "WorkerCount": 1,
        "Queues": [ "default", "emails", "reports" ],
        "RetryAttempts": 3
    },
    "FeatureManagement": {
        "EnableWidgetAnalytics": true,
        "EnableAdvancedFiltering": true,
        "EnableBulkOperations": false,
        "EnableRealTimeNotifications": true
    },
    "ApplicationInsights": {
        "ConnectionString": ""
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    }
}